{
  "name": "@thream/api",
  "version": "0.0.1",
  "description": "Thream's application programming interface to stay close with your friends and communities.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Thream/api"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run format"
    }
  },
  "release-it": {
    "git": {
      "commitMessage": "chore(release): v${version}"
    },
    "github": {
      "release": false
    },
    "npm": {
      "publish": false
    },
    "hooks": {
      "before:init": [
        "npm run lint",
        "npm run test"
      ]
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular",
        "infile": "CHANGELOG.md"
      }
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFiles": [
      "./__test__/setEnvsVars.ts"
    ],
    "setupFilesAfterEnv": [
      "./__test__/setup.ts"
    ],
    "rootDir": "./src",
    "collectCoverage": true,
    "coverageDirectory": "../coverage/"
  },
  "ts-standard": {
    "files": [
      "./src/**/*.ts"
    ],
    "envs": [
      "node",
      "jest"
    ]
  },
  "scripts": {
    "build": "rimraf ./build && tsc",
    "start": "cross-env NODE_ENV=production node build/index.js",
    "dev": "concurrently -k -n \"TypeScript,Node\" -p \"[{name}]\" -c \"blue,green\" \"tsc --watch\" \"cross-env NODE_ENV=development nodemon -e js,json,yaml build/index.js\"",
    "lint": "ts-standard | snazzy",
    "format": "ts-standard --fix | snazzy",
    "release": "release-it",
    "test": "jest",
    "test:watchAll": "jest --watchAll",
    "test:clearCache": "jest --clearCache",
    "postinstall": "node ./scripts/postinstall.js",
    "prepare": "npm run build"
  },
  "dependencies": {
    "axios": "^0.21.0",
    "bcryptjs": "^2.4.3",
    "cors": "2.8.5",
    "dotenv": "8.2.0",
    "ejs": "^3.1.5",
    "express": "4.17.1",
    "express-async-errors": "3.1.1",
    "express-fileupload": "^1.2.0",
    "express-http-to-https": "1.1.4",
    "express-rate-limit": "^5.1.3",
    "express-validator": "^6.6.1",
    "helmet": "4.1.1",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "ms": "^2.1.2",
    "mysql2": "^2.2.5",
    "nodemailer": "^6.4.14",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^5.22.3",
    "sequelize-typescript": "^1.1.0",
    "socket.io": "^2.3.0",
    "socketio-jwt": "^4.6.2",
    "swagger-jsdoc": "^4.3.1",
    "swagger-ui-express": "^4.1.4",
    "tslib": "2.0.3",
    "uuid": "^8.3.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@release-it/conventional-changelog": "^2.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/bluebird": "^3.5.32",
    "@types/cors": "2.8.8",
    "@types/ejs": "^3.0.5",
    "@types/express": "4.17.8",
    "@types/express-fileupload": "^1.1.5",
    "@types/express-rate-limit": "^5.1.0",
    "@types/jest": "26.0.15",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mock-fs": "^4.13.0",
    "@types/morgan": "1.9.1",
    "@types/ms": "^0.7.31",
    "@types/node": "14.14.2",
    "@types/nodemailer": "^6.4.0",
    "@types/socket.io": "^2.1.11",
    "@types/socketio-jwt": "^0.2.0",
    "@types/supertest": "2.0.10",
    "@types/swagger-jsdoc": "^3.0.2",
    "@types/swagger-ui-express": "^4.1.2",
    "@types/uuid": "^8.3.0",
    "@types/validator": "^13.1.0",
    "concurrently": "5.3.0",
    "cross-env": "7.0.2",
    "husky": "^4.3.0",
    "jest": "26.6.1",
    "mock-fs": "^4.13.0",
    "nodemon": "2.0.6",
    "release-it": "^14.2.0",
    "rimraf": "^3.0.2",
    "snazzy": "8.0.0",
    "sqlite": "^4.0.15",
    "sqlite3": "^5.0.0",
    "supertest": "5.0.0",
    "ts-jest": "26.4.2",
    "ts-standard": "9.0.0",
    "typescript": "4.0.3"
  }
}
